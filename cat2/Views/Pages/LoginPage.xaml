<Page
    x:Class="CAT2.Views.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModels="clr-namespace:CAT2.ViewModels">

    <Page.DataContext>
        <viewModels:LoginPageViewModel />
    </Page.DataContext>

    <ui:Card
        Padding="25"
        Margin="65,75,65,75">
        <StackPanel
            Orientation="Vertical">
            <TextBlock
                FontSize="28"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <Run
                    Text="登录" />
                <Run
                    FontSize="25"
                    FontWeight="Bold"
                    Text="ChmlFrp" />
            </TextBlock>

            <ui:TextBox
                FontSize="16"
                Margin="0,25,0,15"
                PlaceholderText="用户名"
                Icon="{ui:SymbolIcon Rename24}"
                Text="{Binding Username,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

            <ui:PasswordBox
                FontSize="16"
                Margin="0,0,0,30"
                PlaceholderText="密码"
                Icon="{ui:SymbolIcon Password24}"
                ToolTip="密码字体怎么这么小？"
                Password="{Binding Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />

            <Grid>
                <ui:Button
                    Padding="8"
                    Appearance="Primary"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="注册"
                    ToolTip="到底有没有账号a！"
                    Icon="{ui:SymbolIcon AddSquare24}"
                    Command="{Binding RegisterClickCommand}" />

                <ui:Button
                    Padding="8"
                    Appearance="Primary"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Content="登录"
                    ToolTip="快点登录a！"
                    Icon="{ui:SymbolIcon SignOut24}"
                    IsEnabled="{Binding IsButtonEnabled}"
                    Command="{Binding LoginClickCommand}" />
            </Grid>
        </StackPanel>
    </ui:Card>
</Page>